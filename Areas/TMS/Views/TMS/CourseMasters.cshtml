                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <br /><input type="submit" value="Submit" style="float: right;" class="btn btn-primary" id="SubmitForm" name="SubmitForm" />
                        </div>
                    </div>
                    @Html.Hidden("SubscriberId", ViewBag.SubscriberId as string)
                </div>
            </div>
        </div>
    </div>
    <br /><br /><br />
    <div class="row">
        <div class="container">
            <div class="table-responsive">
                <table class="table table-bordered nobottommargin">
                    <tr>
                        <th>Course Code</th>
                        <th>Course Name</th>
                        <th>Duration</th>
                        <th>Fee</th>
                        <th>Currency</th>
                        <th>Content Visibility</th>
                        <th>Likes</th>
                        <th>Batches</th>
                        <th>Edit</th>
                        @*<th>Add</th>*@
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.CourseCode@*@Html.ActionLink(item.CourseCode, "AddCourseTopic", "Course", new { area = "LMS", Id = item.CourseCode }, htmlAttributes: new { target = "_blank" })*@
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CourseName) <span>(@Html.DisplayFor(modelItem => item.CategoryName))</span>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CourseDuration)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CourseFee)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Currency)
                            </td>
                            <td>
                                @if (item.ContentVisiblity == 1)
                                {
                                    <span>Private</span>
                                }
                                else if (item.ContentVisiblity == 2)
                                {
                                    <span>Public</span>
                                }
                                else if (item.ContentVisiblity == 3)
                                {
                                    <span>Hidden</span>
                                }

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CountLikes)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalBatches)
                            </td>
                            <td>
                                <a href="@Url.Action("CourseMasters", "TMS", new { CourseCode = item.CourseCode, UserAction = "Edit" })" title="Edit" style="float:right"><i class="icon-pen"></i></a>
                            </td>
                            @*<td>
                                    <a href="@Url.Action("AddCourseTopic", "Course", new { Area = "LMS", Id = item.CourseCode })" class="btn btn-default btn-xs" align="right" target="_blank">Topics</a>
                                </td>*@
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
    @Html.Hidden("RedirectToHome", Url.Action("CourseMasters", "TMS"));
}

