@using AJSolutions.DAL;
@using AJSolutions.Models;
@model IEnumerable<AJSolutions.Models.CourseMasterView>
@{
    ViewBag.Title = "Add Course";
    AJSolutions.Models.UserViewModel user = ViewData["UserProfile"] as AJSolutions.Models.UserViewModel;
    if (user.Role != "Employee")
    {
        Layout = "~/Areas/CMS/Views/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = "~/Areas/EMS/Views/Shared/_Layout.cshtml";
    }
    //Layout = "~/Areas/CMS/Views/Shared/_Layout.cshtml";
    //CourseAttachment content = ViewData["Content"] as CourseAttachment;
}
@using (Html.BeginForm("CourseMasters", "TMS", FormMethod.Post, new { area = "TMS", @class = "form-horizontal", id = "CourseMasters", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Add Course</a></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="form-process"></div>
                <div align="right">
                    <a href="@Url.Action("Mycourses", "TMS", new { Area = "TMS" })" class="btn btn-default btn-xs" align="right">My Courses</a>
                </div>
                <h5 class="card-header">Add New Course</h5>
                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.Hidden("CourseCode", ViewBag.CourseCode as string)
                    @Html.Hidden("IsLMS", ViewBag.IsLMS as string)

                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <label>Course Name<small>*</small></label>
                        <div class="input-group divcenter">
                            <span class="input-group-addon"><i class="icon-book3"> </i></span>
                            @Html.TextBox("CourseName", ViewBag.CourseName as string, new { @class = "form-control required", @id = "CourseName", placeholder = "Eg: JAVA", required = "required" })
                        </div>
                    </div>
                    <br />
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <label>Course Description<small>*</small></label>

                        @Html.TextArea("CourseDescription", ViewBag.CourseDescription as string, 5, 124, new { @Maxlength = 1024, @class = "form-control required", @id = "CourseDescription", placeholder = "Enter The Description", required = "required" })
                        <div id="textarea_feedback" class="text-danger"></div>

                    </div>
                    <br>
                    <div class="row">
                        <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">

                            <label>Course Duration</label><small>*</small><small style="float:right">In Days</small>
