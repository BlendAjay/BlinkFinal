@using AJSolutions.Models
@model GetCountEntryView
@{
    ViewBag.Title = "Home";
    Layout = "~/Areas/CMS/Views/Shared/_Layout.cshtml";

    UserViewModel user = ViewData["UserProfile"] as UserViewModel;
    List<TrainingScheduleView> Training = ViewData["myTraining"] as List<TrainingScheduleView>;
    List<AJSolutions.Areas.Candidate.Models.CandidateTransactionViewModel> Fee = ViewData["FeeDetails"] as List<AJSolutions.Areas.Candidate.Models.CandidateTransactionViewModel>;
}
<section>
    @using (Html.BeginForm("Index", "Dashboard", FormMethod.Post, new { area = "CMS", @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        var isClientView = false;
        if (user.Role != "Admin" && user.DepartmentId == "CLI")
        {
            isClientView = true;
        }
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Admin</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <div class="ecommerce-widget">
            <div class="row">
                <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12 col-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="nobottommargin"><a href="@Url.Action("Add", "User", new { Area = "CMS", Id = "CND" })"> Add <span>Candidate</span></a></h5>
                            <div class="metric-label d-inline-block float-right text-success font-weight-bold">
                                <span>@Model.TOTALSTUDENT Candidate </span>
                            </div>
                        </div>
                        <div id="sparkline-revenue"></div>
                    </div>
                </div>
                <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12 col-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="nobottommargin"> <a href="@Url.Action("AddEmployee", "User", new { Area = "CMS", Id = "EMP" })">Add <span>Employee</span></a> </h5>
                            <div class="metric-label d-inline-block float-right text-success font-weight-bold">
                                <span>@Model.TOTALEMPLOYEE Employee </span>
                            </div>
                        </div>
                        <div id="sparkline-revenue2"></div>
                    </div>
                </div>
                <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12 col-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="nobottommargin"><a href="@Url.Action("Add", "User", new { Area = "CMS", Id = "TPU" })">Add <span>Client</span></a></h5>
                            <div class="metric-label d-inline-block float-right text-primary font-weight-bold">
                                <span>@Model.TOTALCLINT Client </span>
                            </div>
                        </div>
                        <div id="sparkline-revenue3"></div>
                    </div>
                </div>
                <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12 col-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="nobottommargin"><a href="@Url.Action("Add", "User", new { Area = "CMS", Id = "VND" })">Add <span>Vendor</span></a></h5>
                            <div class="metric-label d-inline-block float-right text-secondary font-weight-bold">
                                <span>@Model.TOTALVENDOR Vendor </span>
                            </div>
                        </div>
                        <div id="sparkline-revenue4"></div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-6 col-sm-12 col-12">
                    <div class="card">
                        <h5 class="card-header">My Trainings</h5>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table">
                                    @if (Training.Count > 0)
                                    {
                                        <thead class="bg-light">
                                            <tr class="border-0">
                                                <th class="border-0">Batch</th>
                                                <th class="border-0">Start Date</th>
                                                <th class="border-0">End Date</th>
                                                <th class="border-0">Candidates</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Training)
                                            {
                                                <tr>
                                                    <td>
                                                        @item.TrainingId
                                                    </td>
                                                    <td>@item.FromDate.ToString("dd-MMM-yyyy")</td>
                                                    <td>@item.ToDate.ToString("dd-MMM-yyyy")</td>
                                                    <td>@item.TotalStudent</td>
                                                </tr>
                                            }
                                        </tbody>
                                    }
                                    else
                                    {
                                        <div class="ecommerce-widget">
                                            <i class="fa fa-long-arrow-down fa-4x"></i>
                                            <h3>No Record Found<span class="subtitle"></span></h3>
                                        </div>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
</section>
<style>
    .blink {
        animation-duration: 1s;
        animation-name: blink;
        color: red;
        animation-iteration-count: infinite;
        animation-direction: alternate;
        animation-timing-function: ease-in-out;
    }

    @@keyframes blink {
        from {
            opacity: 1;
        }

        to {
            opacity: .1;
        }
    }
</style>

